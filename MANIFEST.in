# Include important documentation files
include README.md
include LICENSE
include CITATION.md
include CHANGELOG.md

# Include configuration files
include pyproject.toml
include setup.cfg
include pytest.ini

# Include Rust source code for building
recursive-include ts2net_rs *.rs *.toml

# Exclude build artifacts and caches
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
exclude .gitignore
prune htmlcov
prune .github
prune tests

